<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/userentry3"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="12dp"
    app:cardCornerRadius="16dp"
    android:layout_margin="16dp">




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="16dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_vertical">
             <TextView
                 style="bold"
                 android:layout_width="wrap_content"
                 android:layout_height="54dp"
                 android:text="Прашање:"
                 android:textSize="20dp" />

            <TextView
                android:id="@+id/textViewPrasanje3"
                android:layout_width="242dp"
                android:layout_height="44dp"
                android:layout_weight="1"
                android:textSize="24sp"
                android:textStyle="bold" />
        </LinearLayout>

         <RadioGroup
             android:id="@+id/RadioGroupPrasanja3"
             android:layout_width="match_parent"
             android:layout_height="190dp">

             <RadioButton
                 android:id="@+id/TretcheckBoxOdgovor1"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content" />
             <RadioButton
                 android:id="@+id/TretcheckBox2Odgovor2"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content" />
             <RadioButton
                 android:id="@+id/TretcheckBox3Odgovor3"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content" />
             <RadioButton
                 android:id="@+id/TretcheckBox4Odgovor4"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content" />


         </RadioGroup>


    <Button
        android:id="@+id/TretbtnZapomniGlas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Зачувај" />

        <TextView
            android:id="@+id/countDownText3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


    </LinearLayout>


</androidx.cardview.widget.CardView>